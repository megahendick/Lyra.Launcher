<StackPanel x:Class="Lyra.Launcher.Styles.UserItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Lyra.Launcher.Styles"
             mc:Ignorable="d"
             Margin="0,10,0,0"
             d:DesignHeight="300" d:DesignWidth="300">
    <TextBlock Text="{Binding Username}" FontFamily="/Assets/#Inter" FontWeight="SemiBold" FontSize="12" Foreground="{DynamicResource ForegroundBrush}" VerticalAlignment="Center" HorizontalAlignment="Left"/>
    <TextBlock Text="{Binding Server}" FontFamily="/Assets/#Inter" FontWeight="Normal" FontSize="12" Foreground="{DynamicResource ForegroundBrush}" VerticalAlignment="Center" HorizontalAlignment="Left"/>
</StackPanel>
